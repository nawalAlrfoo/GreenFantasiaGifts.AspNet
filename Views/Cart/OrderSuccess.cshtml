@{
    ViewData["Title"] = "Order Success";
}

<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5 text-center mt-5">
    <div class="card shadow-lg border-0 p-5 rounded-4 animate__animated animate__zoomIn">
        <div class="display-1 text-success mb-4">
            <i class="bi bi-check2-circle animate__animated animate__bounceIn animate__delay-1s"></i>
        </div>
        <h1 class="fw-bold animate__animated animate__fadeInUp animate__delay-1s">Payment Successful!</h1>
        <p class="text-muted fs-5 animate__animated animate__fadeInUp animate__delay-2s">
            Your order has been placed. Get ready for some Green Fantasia magic! 🌿
        </p>
        <div class="mt-4 animate__animated animate__fadeInUp animate__delay-3s">
            <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-lg rounded-pill px-5 shadow">
                Back to Shop
            </a>
        </div>
    </div>
</div>

<script>
    window.onload = function() {
        var duration = 5 * 1000;
        var animationEnd = Date.now() + duration;
        var defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };

        function randomInRange(min, max) {
            return Math.random() * (max - min) + min;
        }

        var interval = setInterval(function() {
            var timeLeft = animationEnd - Date.now();
            if (timeLeft <= 0) return clearInterval(interval);

            var particleCount = 50 * (timeLeft / duration);
            confetti(Object.assign({}, defaults, { particleCount, origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 } }));
            confetti(Object.assign({}, defaults, { particleCount, origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 } }));
        }, 250);
    };
</script>