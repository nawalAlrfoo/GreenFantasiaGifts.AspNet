<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreenFantasia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* أيقونات بوتستراب *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/GreenFantasiaGifts011.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom fixed-top shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-success fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-flower1"></i> GreenFantasia @* أيقونة الموقع  *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-light rounded-pill px-3 me-2 shadow-sm" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-bag-heart text-success"></i> Cart @* أيقونة التسوق *@
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-person-circle text-success"></i> Login @*Login أيقونة  *@
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-success rounded-pill px-4 ms-2 shadow-sm" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-pencil-square"></i> Register @* أيقونة Register *@
                            </a>
                        </li>
                    </ul>
 
                       
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px; min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
       
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>